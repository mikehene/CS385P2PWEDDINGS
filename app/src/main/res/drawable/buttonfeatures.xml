<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dp" android:color="#34B4A7" />
            <gradient android:angle="90" android:startColor="#E0ECEC" android:endColor="#34B4A7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="10dp" android:color="#34B4A7" />
            <solid android:color="#34B4A7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="10dp" android:color="#34B4A7" />
            <gradient android:angle="90" android:startColor="#34B4A7" android:endColor="#34B4A7" />
        </shape>
    </item>

</selector>